<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rsb="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="@dimen/margin_right">

            <TextView
                android:id="@+id/add_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_edge"
                android:padding="12dp"
                android:text="@string/add_expense"

                />

            <ImageView
                android:layout_width="@dimen/filter_image"
                android:layout_height="@dimen/filter_image"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/add_textview"
                android:gravity="bottom"
                android:src="@drawable/ic_add_circle_black_24dp"
                android:tint="@color/colorPrimary" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/cross"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="@dimen/image_filter"
                android:layout_height="@dimen/image_filter"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/cross_margin"
                android:gravity="bottom"
                android:src="@drawable/cross_icon" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>